{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "filetypes": ["c", "cpp", "objc", "objcpp"]
        },
        "bash-language-server": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "nimlsp": {
            "command": "nimlsp",
            "filetypes": ["nim", "nims"]
        },
        "scry": {
            "command": "scry",
            "filetypes": ["cr"]
        },
        "sqls": {
            "command": "sqls",
            "filetypes": ["sql"]
        },
        "lua-lsp": {
            "command": "lua-lsp",
            "filetypes": ["lua"]
        }
    },
    "emmet.includeLanguages": {
        "blade": "html",
        "php": "html",
        "vue": "html",
        "html.mustache": "html",
        "jst": "html",
        "htmldjango": "html"
    }
}
