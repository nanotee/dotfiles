#!/usr/bin/env sh
# Change working dir in shell to last dir in lf on exit (adapted from ranger).

tmp="$(mktemp)"
lf -last-dir-path="$tmp" "$@"
if [ -f "$tmp" ]; then
    dir="$(cat "$tmp")"
    rm -f "$tmp"
    if [ -d "$dir" ]; then
        if [ "$dir" != "$(pwd)" ]; then
            cd "$dir" || exit
        fi
    fi
fi
